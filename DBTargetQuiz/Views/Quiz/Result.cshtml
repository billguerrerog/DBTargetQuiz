@model DBTargetQuiz.Models.Candidate

@{
    ViewData["Title"] = "Resultado del Cuestionario";
}

<h2>En base a tus respuestas, sugerimos el siguiente candidato:</h2>

@if (Model != null)
{
    <div class="card mt-4">
        <div class="card-body text-center">
            <h3 class="card-title">@Model.Name</h3>

            @if (!string.IsNullOrEmpty(Model.Picture))
            {
                <img src="@Model.Picture" alt="Foto del candidato" class="img-fluid rounded" />
            }

            <p><strong>Grupo:</strong> @Model.Group</p>
            <p><strong>Edad:</strong> @Model.Age</p>
            <p><strong>Profesión:</strong> @Model.Profession</p>
            <p><strong>Posición:</strong> @Model.Position</p>
            <p><strong>Plan de Gobierno:</strong> @Model.GovPlan</p>
            <p><strong>Propuesta:</strong> @Model.Proposal</p>
        </div>
    </div>
}
else
{
    <p>No se encontró un candidato sugerido.</p>
}
